# Agent Configuration

server:
  url: "https://your-central-server:8000"
  mode: "pull"  # or "push"
  poll_interval: 30

agent:
  # Optional: specify agent ID (auto-generated if not provided)
  # agent_id: "server1-abc123"
  
  # Optional: specify hostname (auto-detected if not provided)
  # hostname: "web-server-01"
  
  # For push mode: port to listen on
  listen_host: "0.0.0.0"
  listen_port: 9000

security:
  ssl_cert_path: "./certs/agent.crt"
  ssl_key_path: "./certs/agent.key"
  ca_cert_path: "./certs/ca.crt"

timeouts:
  connection_timeout: 10
  max_retries: 3
  retry_delay: 5

firewalld:
  reload_timeout: 30

logging:
  log_level: "INFO"
  log_file: "/var/log/firewalld-agent.log"